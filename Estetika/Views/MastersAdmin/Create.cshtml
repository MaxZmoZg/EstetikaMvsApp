@model Estetika.Models.Entities.Master

@{
    ViewBag.Title = "Create";
}

<br />
<br />
<br />


@using (Html.BeginForm("Create", "MastersAdmin", FormMethod.Post,
  new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Добавить мастера</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">ФИО мастера</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Imya_Master, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Imya_Master, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Описание мастера</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Opisanie_Master, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Opisanie_Master, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Фото</label>
            <div class="col-md-10">
        
                @Html.ValidationMessageFor(model => model.Photo, "", new { @class = "text-danger" })
            </div>
            <div class="editor-field">
                <input id="imageInput" type="file" name="uploadImage" />

            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Опыт работы</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Opit, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Opit, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Тип мастера</label>
            <div class="col-md-10">
                @Html.DropDownList("ID_Tip_Master", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ID_Tip_Master, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Создать" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вернуться", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
