@model Estetika.Models.Entities.Master

@{
    ViewBag.Title = "Edit";
}

<br />
<br />
<br />


@using (Html.BeginForm("Edit", "MastersAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Изменить информацио о мастере</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID_Master)

    <div class="form-group">
        <label class="control-label col-md-2">ФИО мастера</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Imya_Master, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Imya_Master, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Описание мастера</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Opisanie_Master, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Opisanie_Master, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Фото мастера</label>
        <div class="col-md-10">
            @{ if (Model.Photo == null)
                {
                    <img id='previewImage' class="imgactive"
                         style='width:150px; height:150px;' src="~/Resource/userphoto.png" />
                }
                else
                {
                    <img id='previewImage' class='imgactive'
                         style='width:150px; height:150px;'
                         src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Photo)" />
                }
            }
            @Html.ValidationMessageFor(model => model.Photo, "", new { @class = "text-danger" })
        </div>
        <div class="editor-field">
            <input id="imageInput" type="file" name="goodsImage" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Опыт работы</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Opit, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Opit, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Тип мастера</label>
        <div class="col-md-10">
            @Html.DropDownList("ID_Tip_Master", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ID_Tip_Master, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Венуться", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
