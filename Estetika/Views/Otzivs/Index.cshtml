@using Estetika.Models.Entities; @model IEnumerable<Otziv>

@{
    ViewBag.Title = "Index";
}
<br />
<br />
<br />
<div>
    <h3 style="margin-left:15px;  ">Отзывы</h3>

</div>




<section class="container">
    <div class="row">

        <div class="col-md-12">
            <div class="panel">
                <div class="panel-body">
                    @using (Html.BeginForm("PostComment", "Otzivs", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        
                        <textarea name="comment" class="form-control" rows="2" style="height:80px;" placeholder="Добавьте Ваш комментарий"></textarea>
                        //Валидацию об ошибке
                        <div class="mar-top clearfix">
                            <button class="btn btn-sm btn-primary pull-left" type="submit"><i class="fa fa-pencil fa-fw"></i> Добавить</button>
                        </div>


                    }
                    <br />
                    <br />
                    <br />
                </div>
                </div>
                <div class="panel">
                    <div class="panel-body">
                        @foreach (var item in Model)
                        {
                            <div class="media-block">
                                <a class="media-left" href="#"><img class="img-circle img-sm" alt="Профиль пользователя" src="~/Resource/userphoto.png"></a>

                                <div class="media-body">
                                    <div class="mar-btm">
                                        <a href="#" class="btn-link text-semibold media-heading box-inline"> @(item.Polzovatel.Imya)</a>
                                    </div>
                                    <p>@(item.Napisanny_Otziv)</p>
                                    <hr>
                                </div>
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div><!-- /.row -->
    </section><!-- /.container -->








