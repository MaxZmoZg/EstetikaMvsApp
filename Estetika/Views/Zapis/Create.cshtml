@using Estetika.Models.Entities; @model Zapis

@{
    @Styles.Render("~/Content/StylePage/AddEditZaisStyle.css")
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <!-- code here -->
        <div class="card">
            <div class="card-image">
            </div>
            <form class="card-form">
                <div class="input">
                    <label class="input-label">Дата записи</label>
                    @Html.EditorFor(model => model.Data, new { htmlAttributes = new { @class = "form-control radiusinput", @type = "date" } })
                    @Html.ValidationMessageFor(model => model.Data, "", new { @class = "text-danger" })
                </div>
                <div class="input">
                    <label class="input-label">Время записи</label>
                    @Html.ValidationMessageFor(model => model.Vremya, "", new { @class = "text-danger" })
                    <ul style=" list-style-type: none; margin-top:20px; margin-left:-25px; ">

                        <li>@Html.RadioButtonFor(request => request.Vremya, TimeSpan.FromHours(8), new { htmlAttributes = new { @class = "rdbtn" } }) 8:00  </li>
                        <li>@Html.RadioButtonFor(request => request.Vremya, TimeSpan.FromHours(10), new { htmlAttributes = new { @class = "rdbtn" } }) 10:00 </li>
                        <li>@Html.RadioButtonFor(request => request.Vremya, TimeSpan.FromHours(13), new { htmlAttributes = new { @class = "rdbtn" } }) 13:00  </li>
                        <li>@Html.RadioButtonFor(request => request.Vremya, TimeSpan.FromHours(15), new { htmlAttributes = new { @class = "rdbtn" } }) 15:00  </li>
                        <li>@Html.RadioButtonFor(request => request.Vremya, TimeSpan.FromHours(17), new { htmlAttributes = new { @class = "rdbtn" } }) 17:00  </li>
                    </ul>
                </div>
                <div class="input">
                    <label class="input-label">Мастер</label>
                    @Html.DropDownList("ID_Master", null, htmlAttributes: new { @class = "form-control radiusinput" })
                    @Html.ValidationMessageFor(model => model.ID_Master, "", new { @class = "text-danger" })
                </div>
                <div class="action">
                    <input type="submit" value="Записаться" class="btn btn-default action-button" />
                </div>
            </form>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
